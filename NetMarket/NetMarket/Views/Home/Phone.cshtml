@model IEnumerable<NetMarket.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .product-wrapper {
        display: block;
        width: 100%;
        float: left;
        -ms-transition: width .2s;
        -o-transition: width .2s;
        -webkit-transition: width .2s;
        transition: width .2s;
    }

    @@media only screen and (min-width: 450px) {
        .product-wrapper {
            width: 50%;
        }
    }

    @@media only screen and (min-width: 768px) {
        .product-wrapper {
            width: 33.333%;
        }
    }

    @@media only screen and (min-width: 1000px) {
        .product-wrapper {
            width: 25%;
        }
    }

    .products {
        list-style: none;
        margin: 0 -20px 20px 0;
        padding: 0;
    }

    .card-photo {
        position: relative;
        padding-bottom: 100%;
        overflow: hidden;
    }

        .card-photo img {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            max-width: 80%;
            max-height: 80%;
            margin: auto;
            transition: transform .4s ease-out;
        }

    .card:hover .card-photo img {
        transform: scale(1.05);
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 267px;
        background: #fff;
        margin: 0 20px 20px 0;
        text-align: center;
        font-family: arial;
        display: block;
        text-decoration: none;
        z-index: 0;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: mediumslateblue;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card button:hover {
            opacity: 0.7;
        }

    .div-scroll {
        overflow-x: hidden;
    }

    .p1 {
        position: relative;
        margin: 0;
        font-size: 1em;
        line-height: 1.2em;
        height: 2.8em;
        overflow: hidden;
        font-weight: bold;
    }
</style>

<div class="div-scroll">
    <h1 class="text-center" style="margin-bottom: 28px; color: mediumslateblue">Добро пожаловать в интернет-магазин ПАЕМ!</h1>
    <ul class="products">
        @foreach (var item in Model)
        {
            <li class="product-wrapper">
                <div class="card">
                    <div class="card-photo">
                        <img src="~/@item.ImageString" alt="" />
                    </div>
                    <h1 class="p1">@item.Name</h1>
                    <p class="price">@item.Price ₽</p>
                    @if (item.HaveInStock)
                    {
                        <p>Есть в наличии</p>
                    }
                    else
                    {
                        <p>Нет в наличии</p>
                    }
                    <form asp-action="AddToBasket" asp-anti-forgery="true">
                    <p><button>Добавить в корзину</button></p>
                    </form>
                </div>
            </li>
        }
    </ul>
</div>